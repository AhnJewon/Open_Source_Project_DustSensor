<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sensing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/sw_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="블루투스 스캔 종료"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:thumbTint="@color/puple"
            android:trackTint="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.375"
            android:gravity="center|left"
            android:text="Type"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeStepGranularity="2sp" />

        <ToggleButton
            android:id="@+id/tbt_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.625"
            android:backgroundTint="@color/background"
            android:drawableTint="#CFBBFE"
            android:foregroundTint="#CFBBFE"
            android:shadowColor="#CFBBFE"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/puple"
            android:textOff="DustSensor"
            android:textOn="AirQuality"
            android:textSize="22dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/puple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            android:gravity="center|left"
            android:text="sensor"
            android:textSize="14sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp" />

        <TextView
            android:id="@+id/ed_sens"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            android:gravity="center|left"
            android:text="mac"
            android:textSize="14sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp" />

        <TextView
            android:id="@+id/ed_mac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.625"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            android:gravity="center|left"
            android:text="otp"
            android:textSize="14sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp" />

        <TextView
            android:id="@+id/ed_otp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            android:gravity="center|left"
            android:text="time"
            android:textSize="14sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp" />

        <TextView
            android:id="@+id/ed_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.625"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/rcv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:text="receiver"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp" />

            <TextView
                android:id="@+id/ed_rcv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pm01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:text="PM0.1"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp" />

            <TextView
                android:id="@+id/ed_pm0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/pm25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:text="PM2.5"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp" />

            <TextView
                android:id="@+id/ed_pm2.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pm10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:text="PM10"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp" />

            <TextView
                android:id="@+id/ed_pm10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/puple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/puple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/background"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_show"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/background"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="데이터 확인"
            android:textColor="@color/black"
            app:icon="@android:drawable/ic_menu_search"
            app:iconGravity="top"
            app:iconPadding="3dp"
            app:iconSize="25dp"
            app:iconTint="@color/gray"
            app:rippleColor="#D1C4E9" />

        <Button
            android:id="@+id/bt_delet"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:text="데이터 삭제"
            android:textColor="@color/black"
            android:textColorLink="#00ff0000"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconGravity="top"
            app:iconPadding="3dp"
            app:iconSize="25dp"
            app:iconTint="@color/gray" />

        <Button
            android:id="@+id/bt_store"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:text="데이터 저장"
            android:textColor="@color/black"
            app:icon="@android:drawable/ic_menu_save"
            app:iconGravity="top"
            app:iconPadding="3dp"
            app:iconSize="25dp"
            app:iconTint="@color/gray"
            app:rippleColor="#D1C4E9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal" />
</LinearLayout>




